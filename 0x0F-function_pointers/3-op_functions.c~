#include <stdlib.h>
#include <stdio.h>
#include "calc.h"
/**
 *op_add - is a sum of a and b.
 *@a: is integer.
 *@b: is interger.
 *Return: integer.
 */
int op_add(int a, int b)
{
	return (a + b);
}


/**
 *op_sub - is a difference of a and b.
 *@a: is integer.
 *@b: is interger.
 *Return: integer.
 */
int op_sub(int a, int b)
{
	return (a - b);
}

/**
 *op_mul - is a sum of a and b.
 *@a: is integer.
 *@b: is interger.
 *Return: integer.
 */
int op_mul(int a, int b)
{
        return (a * b);
}

/**
 *op_div - is a division of a and b.
 *@a: is integer.
 *@b: is interger.
 *Return: integer.
 */
int op_div(int a, int b)
{
        return (a / b);
}

/**
 *op_mod - is a sum of a and b.
 *@a: is integer.
 *@b: is interger.
 *Return: integer.
 */
int op_mod(int a, int b)
{
        return (a % b);
}
